<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ic_corner"
    android:elevation="1dp"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imageproductcart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"

        android:contentDescription="image"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_home_brackground_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout32"
        android:layout_width="150dp"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toEndOf="@+id/imageproductcart"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtproductcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-black"
            android:text="product"
            android:textColor="#212121"
            android:textSize="23dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtpricecart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:hint="precio"
            android:text="78.99$"
            android:textColor="#212121"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtproductcart" />

        <TextView
            android:id="@+id/txtamount"
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:layout_marginTop="24dp"
            android:hint="precio"
            android:text="1"
            android:textColor="#212121"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtproductcart" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btndeletecart"
        android:layout_width="42dp"
        android:layout_height="48dp"


        android:text="X"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>